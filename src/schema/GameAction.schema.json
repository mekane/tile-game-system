{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://martykane.org/schemas/GameAction.schema.json",
  "type": "object",
  "properties": {
    "action": {
      "type": "string",
      "enum": [
        "addUnit",
        "move",
        "startEncounter"
      ]
    },
    "boardX": {
      "type": "number"
    },
    "boardY": {
      "type": "number"
    },
    "direction": {
      "type": "string",
      "enum": [
        "n",
        "ne",
        "e",
        "se",
        "s",
        "sw",
        "w",
        "nw"
      ]
    },
    "encounterIndex": {
      "type": "number"
    },
    "unit": {
      "type": "number",
      "minimum": 0
    },
    "unitId": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "action"
  ]
}
