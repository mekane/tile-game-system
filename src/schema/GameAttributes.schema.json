{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://martykane.org/schemas/GameAttributes.schema.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "scenario": {
      "$ref": "http://martykane.org/schemas/ScenarioAttributes.schema.json"
    },
    "currentEncounterIndex": {
      "type": "number",
      "minimum": 0
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "scenario"
  ]
}
